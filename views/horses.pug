extends layout

block content
  h1= title
  - var horse_arr = [{ horse_name: "Midnight Shadow", horse_age: 6, horse_price: 5500 },{ horse_name: "Thunderbolt", horse_age: 5, horse_price: 4200 },{ horse_name: "Starry Night", horse_age: 4, horse_price: 6800 }]
  div(class="container-fluid")
    div(class="row")
      each camera, index in horse_arr
        div(class="col-sm-2" onclick = `buy(${index})`)
          p #{camera.horse_name}
          p age : #{camera.horse_age}
          p Price: $#{camera.horse_price}
          - let destination = `dispatch(\"/horses/update?id=${camera._id}\")`
          div(class="row-sm-2", class="m-1") Item #{camera.horse_name}(#{camera.horse_age}) is #{camera.horse_price}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
          
    script.
      function buy(a) {
        alert("You purchased Item " + (a + 1));
      }
      function dispatch(path){
        window.location.href=path
      }


