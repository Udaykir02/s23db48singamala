extends layout

block content
  link(rel="stylesheet" type="text/css" href="style.css")

  h1= title
  p rows is #{query.rows} and cols is #{query.cols}
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)
  p rows is #{rows} and cols is #{cols}
  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p Passed arguments are not integers
  - else if (!(rows >= 1 && rows <= 10) || !(cols >= 1 && cols <= 10))
    p Range of rows and columns must be in the range 1 to 10
  - else
    br
    h5 Displaying Table
    table#outer.my-table
      - for (let i = 0; i < rows; i++)
        tr#middle
          - for (let j = 0; j < cols; j++)
            - if (i === j)
              td= 1
            - else if (i === j + 1)
              td= 2
            - else if (i + 1 === j)
              td= 1
            - else
              td= 0